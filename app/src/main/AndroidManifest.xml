                <action android:name="android.intent.action.SEARCH" />
            </intent-filter>
        </activity-->
        <activity
            android:name=".sasfragments.classmapfragments.ClassMapActivity"
            android:label="@string/classmapFragment_title"
            android:parentActivityName=".SASActivity"
            android:theme="@style/sas_bartheme">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="mits.uwi.com.ourmobileenvironment.SASActivity"/>
        </activity>
        <metadata
            android:name="DATABASE" android:value="timetable.db" />
        <metadata
            android:name="VERSION" android:value="1" />
        <metadata
            android:name="QUERY_LOG" android:value="true" />
        <metadata
            android:name="DOMAIN_PACKAGE_NAME" android:value="mits.uwi.com.ourmobileenvironment.sasfragments" />
    <meta-data
        android:name="com.google.android.geo.API_KEY"
        android:value="AIzaSyBqb4v1V6KAa2UQSbrduEs98fC1WwplnxY"/>
        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version"
            />
