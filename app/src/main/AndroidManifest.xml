<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="mits.uwi.com.ourmobileenvironment">

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="com.example.googlemaps.permission.MAPS_RECEIVE" />

    <uses-sdk
        android:minSdkVersion="12"
        android:targetSdkVersion="17" />
    <permission
        android:name="com.example.googlemaps.permission.MAPS_RECEIVE"
        android:protectionLevel="signature" />
        <uses-permission android:name="com.google.android.providers.gsf.permission.READ_GSERVICES" />
        <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
        <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
        <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
        <uses-feature
            android:glEsVersion="0x00020000"
            android:required="true"/>

    <application
        android:name="com.orm.SugarApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        tools:replace="android:icon"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".LandingActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".OurVLEActivity"
            android:label="@string/title_activity_our_vle"
            android:parentActivityName=".LandingActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="mits.uwi.com.ourmobileenvironment.LandingActivity" />
        </activity>
        <activity
            android:name=".SASActivity"
            android:label="@string/title_activity_sas"
            android:parentActivityName=".LandingActivity"
            android:theme="@style/sas_bartheme" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="mits.uwi.com.ourmobileenvironment.LandingActivity" />

        </activity>
        <activity android:name=".sasfragments.coursefragments.CourseInfoActivity"
            android:label="@string/course_info"
            android:parentActivityName=".SASActivity"
            android:theme="@style/sas_bartheme">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="mits.uwi.com.ourmobileenvironment.SASActivity"/>
        </activity>
        <activity android:name=".sasfragments.SAS_Splash"
            android:theme="@style/Theme.Transparent">
        </activity>
        <activity
            android:name=".BOSSActivity"
            android:label="@string/title_activity_boss"
            android:parentActivityName=".LandingActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="mits.uwi.com.ourmobileenvironment.LandingActivity" />
        </activity>
        <activity
            android:name=".BusScheduleActivity"
            android:label="@string/title_activity_bus_schedule"
            android:launchMode="singleTask"
            android:configChanges="orientation"
            android:parentActivityName=".LandingActivity"
            android:theme="@style/actionbartheme" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="mits.uwi.com.ourmobileenvironment.LandingActivity" />
            <meta-data
                android:name="android.app.searchable"
                android:resource="@xml/searchable"
                android:value=".BusSearchActivity"
                />
        </activity>
        <activity
            android:name=".CampusInformationActivity"
            android:label="@string/title_activity_campus_information"
            android:parentActivityName=".LandingActivity"
            android:theme="@style/campusinfotheme" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="mits.uwi.com.ourmobileenvironment.LandingActivity" />
                />
            <meta-data android:name="android.app.searchable"
                android:resource="@xml/searchable"/>
            <intent-filter>
                <action android:name="android.intent.action.SEARCH"/>
            </intent-filter>
        </activity>
        <activity
            android:name=".DirectoryActivity"
            android:label="@string/title_activity_directory"
            android:parentActivityName=".LandingActivity"
            android:theme="@style/blueactionbartheme" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="mits.uwi.com.ourmobileenvironment.LandingActivity" />
        </activity>

        <!--activity
            android:name=".BusSearchActivity"
            android:label="@string/title_activity_bus_search" >
