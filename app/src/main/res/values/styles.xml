<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->

    </style>

    <style name="HomeViewActionBar" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">#E4002B</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:elevation" tools:targetApi="lollipop">0dp</item>
        <item name="elevation">0dp</item>
    </style>

    <style name="actionbartheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:actionBarStyle">@style/orange_bar</item>
        <item name="actionBarStyle">@style/orange_bar</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="orange_bar" parent="@style/Widget.AppCompat.Light.ActionBar.Solid">
        <item name="android:colorBackground">@color/actionbar_background</item>
        <item name="background">@color/actionbar_background</item>
        <item name="elevation">0dp</item>
        <item name="android:textAppearance">@style/AppActionBarTitleText</item>
    </style>

    <style name="AppActionBarTitleText" parent="@android:style/TextAppearance.Holo.Widget.ActionBar.Title">
        <item name="android:textColor">@color/white</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">0</item>
        <item name="android:shadowRadius">1.5</item>
    </style>

    <style name="campusinfotheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:colorBackground">@color/actionbar_background_campusinfo</item>
        <item name="background">@color/actionbar_background_campusinfo</item>
        <item name="android:actionBarStyle">@style/campus_information</item>
        <item name="actionBarStyle">@style/campus_information</item>
        <item name="android:windowContentOverlay">@null</item>

    </style>

    <style name="campus_information" parent="@style/Widget.AppCompat.Light.ActionBar.Solid">
        <item name="android:colorBackground">@color/actionbar_background_campusinfo</item>
        <item name="background">@color/actionbar_background_campusinfo</item>
        <item name="elevation">0dp</item>
        <item name="android:textAppearance">@style/AppActionBarTitleText</item>
    </style>

    <style name="eateries" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:actionBarStyle">@style/eateriesbar</item>
        <item name="actionBarStyle">@style/eateriesbar</item>
        <item name="android:colorBackground">@color/eateries</item>
        <item name="background">@color/eateries</item>
    </style>

    <style name="eateriesbar" parent="@style/Widget.AppCompat.Light.ActionBar.Solid">
        <item name="background">@color/eateries</item>
        <item name="android:colorBackground">@color/eateries</item>
        <item name="elevation">0dp</item>
        <item name="android:textAppearance">@style/AppActionBarTitleText</item>
    </style>


    <style name="sas_bartheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:actionBarStyle">@style/white_bar</item>
        <item name="actionBarStyle">@style/white_bar</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowActionBar">false</item>
    </style>

    <style name="SasTabLayout" parent="Widget.Design.TabLayout">
        <item name="tabMaxWidth">@dimen/navigation_max_width</item>
        <item name="tabIndicatorColor">@color/accent</item>
        <item name="tabIndicatorHeight">4dp</item>
        <!--item name="tabPaddingStart">12dp</item-->
        <!--item name="tabPaddingEnd">12dp</item-->
        <item name="tabBackground">?attr/selectableItemBackground</item>
        <item name="tabTextAppearance">@style/MyCustomTabTextAppearance</item>
        <item name="tabSelectedTextColor">@color/accent</item>
    </style>

    <style name="SasTabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="textAllCaps">true</item>
    </style>


    <!-- the theme applied to the application or activity -->
    <style name="CustomActionBarTheme" parent="@android:style/Theme.Holo.Light.DarkActionBar">
        <item name="android:actionBarStyle">@style/MyActionBar</item>
    </style>

    <!-- ActionBar styles -->
    <style name="MyActionBar" parent="@android:style/Widget.Holo.Light.ActionBar.Solid">
        <item name="android:background">@color/actionbar_background</item>
    </style>

    <style name="blueactionbartheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:actionBarStyle">@style/bluebar</item>
        <item name="actionBarStyle">@style/bluebar</item>
    </style>

    <style name="bluebar" parent="@style/Widget.AppCompat.Light.ActionBar.Solid">

        <item name="android:colorBackground">@color/blue_background</item>
        <item name="background">@color/blue_background</item>
        <item name="elevation">10dp</item>
    </style>

    <style name="white_bar" parent="@style/Widget.AppCompat.Light.ActionBar.Solid">
        <item name="android:colorBackground">@color/white</item>
        <item name="background">@color/white</item>
        <item name="elevation">10dp</item>
        <item name="android:textAppearance">@style/AppActionBarTitleText</item>
    </style>

    <!-- Splash Screen Animation -->
    <style name="Theme.Transparent" parent="android:Theme">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:windowAnimationStyle">@style/Animations.SplashScreen</item>
    </style>

    <style name="Animations.SplashScreen" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/appear</item>
        <item name="android:windowExitAnimation">@anim/disappear</item>
    </style>


    <style name="MyCustomTabLayout" parent="Widget.Design.TabLayout">
        <item name="tabMaxWidth">@dimen/tab_max_width</item>
        <item name="tabTextAppearance">@style/MyCustomTabTextAppearance</item>
        <item name="colorAccent">@color/blue</item>
    </style>


    <style name="MyCustomTabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="textAllCaps">false</item>
    </style>


    <!-- TODO: Remove the Faux-FAB related styles, replace with new FAB colors -->
    <style name="FABButtons" parent="Widget.Design.FloatingActionButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:elevation" tools:targetApi="lollipop">4dp</item>
        <item name="android:layout_marginTop">15dip</item>
        <!--<item name="useCompatPadding">true</item>-->
        <item name="fabSize">normal</item>
        <item name="elevation">4dp</item>

    </style>

    <style name="secondaryFABButtons" parent="FABButtons">
        <item name="fabSize">mini</item>
    </style>

