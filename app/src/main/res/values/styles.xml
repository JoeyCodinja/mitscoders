<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->


    </style>

    <style name="actionbartheme"
        parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:actionBarStyle">@style/orange_bar</item>
        <item name="actionBarStyle">@style/orange_bar</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="orange_bar"
        parent="@style/Widget.AppCompat.Light.ActionBar.Solid">
        <item name="android:colorBackground">@color/actionbar_background</item>
        <item name="background">@color/actionbar_background</item>
        <item name="elevation">0dp</item>
        <item name="android:textAppearance">@style/AppActionBarTitleText</item>
    </style>

    <style name="AppActionBarTitleText"
        parent="@android:style/TextAppearance.Holo.Widget.ActionBar.Title">
        <item name="android:textColor">@color/white</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">0</item>
        <item name="android:shadowRadius">1.5</item>
    </style>
    <style name="campusinfotheme"
        parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:actionBarStyle">@style/eateries_bar</item>
        <item name="actionBarStyle">@style/eateries_bar</item>
        <item name="android:windowContentOverlay">@null</item>

    </style>
    <style name="eateries_bar"
        parent="@style/Widget.AppCompat.Light.ActionBar.Solid">
        <item name="android:colorBackground">@color/actionbar_background_eateries</item>
        <item name="background">@color/actionbar_background_eateries</item>
        <item name="elevation">0dp</item>
        <item name="android:textAppearance">@style/AppActionBarTitleText</item>
    </style>

    <style name="sas_bartheme"
        parent="Theme.AppCompat.Light">
        <item name="android:actionBarStyle">@style/white_bar</item>
        <item name="actionBarStyle">@style/white_bar</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <!-- the theme applied to the application or activity -->
    <style name="CustomActionBarTheme"
        parent="@android:style/Theme.Holo.Light.DarkActionBar">
        <item name="android:actionBarStyle">@style/MyActionBar</item>
    </style>

    <!-- ActionBar styles -->
    <style name="MyActionBar"
        parent="@android:style/Widget.Holo.Light.ActionBar.Solid">
        <item name="android:background">@color/actionbar_background</item>
    </style>

    <style name="blueactionbartheme"
        parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:actionBarStyle">@style/bluebar</item>
        <item name="actionBarStyle">@style/bluebar</item>
    </style>
    <style name="bluebar"
        parent="@style/Widget.AppCompat.Light.ActionBar.Solid">
        >
        <item name="android:colorBackground">@color/blue_background</item>
        <item name="background">@color/blue_background</item>
        <item name="elevation">10dp</item>
    </style>

    <style name="white_bar"
        parent="@style/Widget.AppCompat.Light.ActionBar.Solid">
        <item name="android:colorBackground">@color/white</item>
        <item name="background">@color/white</item>
        <item name="elevation">0dp</item>
        <item name="android:textAppearance">@style/AppActionBarTitleText</item>
    </style>

    <!-- Splash Screen Animation -->
    <style name="Theme.Transparent" parent="android:Theme">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:windowAnimationStyle">@style/Animations.SplashScreen</item>
    </style>

    <style name="Animations.SplashScreen" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/appear</item>
        <item name="android:windowExitAnimation">@anim/disappear</item>
    </style>


</resources>
