<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.bluejamesbond.text.DocumentView xmlns:ext="http://schemas.android.com/apk/res-auto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        ext:documentView_antialias="true"
        ext:documentView_textFormat="plain"
        ext:documentView_textSize="18sp"
        ext:documentView_text="@string/campus_info_heading"
        ext:documentView_textAlignment="justified"
        ext:documentView_insetPadding="12dp"
        />

    <ExpandableListView
        android:id="@+id/campus_info_expandable_list"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"/>


</LinearLayout>