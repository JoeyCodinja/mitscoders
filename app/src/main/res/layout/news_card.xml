<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android" xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:layout_marginBottom='20dp'
    card_view:cardCornerRadius="0dp" card_view:cardUseCompatPadding="true"
    card_view:cardElevation="3dp">
        <RelativeLayout
            android:orientation="vertical"
            android:layout_height="match_parent" android:layout_width="match_parent">
                <ImageView
                    android:id="@+id/news_card_image"
                    android:layout_height="wrap_content" android:layout_width="match_parent"
                    android:layout_above="@+id/news_card_title"
                    android:scaleType="centerInside"/>
                <TextView
                    android:id="@+id/news_card_title"
                    android:layout_height="50dp" android:layout_width="match_parent"
                    android:textStyle="bold" android:textColor="#eeeeee" android:textSize="15sp"
                    android:textAllCaps="true"
                    android:background="#64000000"
                    android:layout_alignParentBottom="true"
                    android:paddingLeft="5dp" android:paddingRight="5dp"
                    android:paddingTop="15dp"
                    android:singleLine="true"
                    android:text="This is a lorem ipsum dolor sectum sempris valorem"/>
        </RelativeLayout>
</android.support.v7.widget.CardView>