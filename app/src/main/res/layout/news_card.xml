<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android" xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="150dp"
    android:layout_marginBottom='20dp'
    card_view:cardCornerRadius="0dp" card_view:cardUseCompatPadding="true"
    card_view:cardElevation="3dp">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_height="match_parent" android:layout_width="match_parent">
                <ImageView
                    android:id="@+id/news_card_image"
                    android:layout_height="match_parent" android:layout_width="0dp"
                    android:scaleType="centerInside"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:src="@drawable/untitled"
                    android:adjustViewBounds="true" />
                <TextView
                    android:id="@+id/news_card_title"
                    android:layout_height="match_parent" android:layout_width="0dp"
                    android:textStyle="bold" android:textColor="#302f2f" android:textSize="16sp"
                    android:textAlignment="center"
                    android:layout_gravity="center"
                    android:paddingLeft="5dp" android:paddingRight="5dp"
                    android:paddingTop="10dp"
                    android:singleLine="false"
                    android:text="This is a lorem ipsum dolor sectum semper lorem"
                    android:layout_weight="2"
                    android:gravity="center_vertical|center_horizontal" />
        </LinearLayout>
</android.support.v7.widget.CardView>