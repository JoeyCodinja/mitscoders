<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    android:id="@+id/cv">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="5dp"
        android:paddingBottom="10dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp">


        <com.pkmmte.view.CircularImageView
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:id="@+id/eateries_photo"
            app:border="false"
            app:shadow="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/eateries_name"
            android:layout_toRightOf="@+id/eateries_photo"
            android:layout_alignParentTop="true"
            android:textStyle="bold"
            android:textSize="20sp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/eateries_location"
            android:layout_toRightOf="@+id/eateries_photo"
            android:layout_below="@+id/eateries_name"
            android:textSize="15sp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/eateries_hours"
            android:layout_toRightOf="@+id/eateries_photo"
            android:layout_below="@+id/eateries_location"
            android:textSize="15sp"
            />

    </RelativeLayout>

</android.support.v7.widget.CardView>
