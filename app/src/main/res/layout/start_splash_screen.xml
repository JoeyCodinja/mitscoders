<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="@color/red"
    android:gravity="center_horizontal|center_vertical">
    <ImageView
        android:id="@+id/uwi_crest"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/uwi_coat_of_arms"/>
    <TextView
        android:id="@+id/uwi_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="UWI"
        android:textSize="50sp"
        android:gravity="center_horizontal"
        android:layout_below="@id/uwi_crest"
        android:textColor="#FFFFFF"/>
    <TextView
        android:id="@+id/uwi_name2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Mona Campus\n Jamaica, West Indies"
        android:gravity="center_horizontal"
        android:textSize="25sp"
        android:layout_below="@id/uwi_name"
        android:textColor="#FFFFFF"/>
</RelativeLayout>