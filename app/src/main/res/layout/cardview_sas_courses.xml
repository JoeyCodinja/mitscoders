<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="5dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:clickable="true"
    android:id="@+id/cv">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp">

        <ImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:id="@+id/course"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/course_title"
            android:layout_toRightOf="@+id/course"
            android:text="test"
            android:layout_alignParentTop="true"
            android:textStyle="bold"
            android:textSize="13sp"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/course_subject"
            android:text="test"
            android:textSize="13sp"
            android:layout_below="@+id/course_title"
            android:layout_toRightOf="@+id/course" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/course_code"
            android:layout_toRightOf="@+id/course"
            android:layout_below="@+id/course_subject"
            android:text="test"
            android:textSize="13sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/course_type"
            android:text="test"
            android:textSize="13sp"
            android:layout_toRightOf="@+id/course"
            android:layout_below="@+id/course_code" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/location_icon"
            android:layout_alignParentRight="true"
            android:clickable="@bool/abc_action_bar_embed_tabs"
            android:src="@drawable/ic_location"
            android:layout_below="@+id/course_code"
            />

    </RelativeLayout>

</android.support.v7.widget.CardView>